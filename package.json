{
  "name": "bklit",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.11.1",
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma",
    "seed": "tsx packages/db/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @bklit/auth generate",
    "db:generate": "pnpm run -F @bklit/db generate",
    "db:migrate": "pnpm run -F @bklit/db migrate",
    "db:studio": "pnpm run -F @bklit/db studio",
    "dev": "turbo watch dev --continue",
    "dev:ngrok": "bash scripts/start-ngrok.sh && turbo watch dev --continue",
    "dev:web": "turbo watch dev -F @bklit/web...",
    "ngrok:start": "bash scripts/start-ngrok.sh",
    "ngrok:stop": "bash scripts/stop-ngrok.sh",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "postinstall": "#pnpm lint:ws",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@turbo/gen": "^2.5.4",
    "turbo": "^2.5.4",
    "prisma": "catalog:prisma",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@prisma/client": "catalog:prisma"
  }
}

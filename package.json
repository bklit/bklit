{
  "name": "bklit",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.11.1",
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma",
    "seed": "tsx packages/db/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @bklit/auth generate",
    "db:generate": "pnpm -F @bklit/db generate",
    "db:migrate": "pnpm -F @bklit/db migrate",
    "db:studio": "pnpm -F @bklit/db studio",
    "db:reset": "pnpm -F @bklit/db db:reset",
    "db:reset:seed": "pnpm -F @bklit/db db:reset:seed",
    "db:push": "pnpm -F @bklit/db db:push",
    "db:pull": "pnpm -F @bklit/db db:pull",
    "db:status": "pnpm -F @bklit/db db:status",
    "db:deploy": "pnpm -F @bklit/db db:deploy",
    "cli:build": "pnpm -F @bklit/create build",
    "cli:link": "cd packages/create && pnpm link --global",
    "cli:test": "node packages/create/dist/index.js",
    "dev": "pnpm dev:services && turbo watch dev --filter=@bklit/dashboard --filter=@bklit/playground --continue",
    "dev:services": "docker-compose up -d clickhouse",
    "dev:services:stop": "docker-compose down",
    "dev:full": "turbo watch dev dev:trigger --continue",
    "dev:docs": "pnpm -F @bklit/docs dev",
    "deploy:trigger": "pnpm -F @bklit/dashboard deploy:trigger",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "postinstall": "#pnpm lint:ws",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@turbo/gen": "^2.5.8",
    "prisma": "catalog:prisma",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@prisma/client": "catalog:prisma"
  }
}

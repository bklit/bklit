{
  "name": "bklit",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.11.1",
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma",
    "seed": "tsx packages/db/src/seed.ts"
  },
  "scripts": {
    "dev:services": "docker-compose up -d && sleep 5 && pnpm dev:init:db && concurrently -n prisma,ingestion,worker \"npx prisma dev\" \"pnpm dev:ingestion\" \"pnpm dev:worker\"",
    "dev": "NODE_ENV=development turbo watch dev --filter=@bklit/dashboard --filter=@bklit/playground --filter=@bklit/website --continue",
    "dev:init:db": "pnpm --filter=@bklit/analytics with-env tsx src/migrations/init-tables.ts",
    "dev:ingestion": "NODE_ENV=development REDIS_URL=redis://localhost:6379 pnpm --filter=@bklit/ingestion dev",
    "dev:worker": "NODE_ENV=development REDIS_URL=redis://localhost:6379 pnpm --filter=@bklit/worker dev",
    "dev:stop": "pkill -9 node prisma; docker-compose down",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:next": "rm -rf apps/dashboard/.next apps/docs/.next",
    "clean:all": "pnpm clean && pnpm clean:next && git clean -xdf .turbo",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "format": "ultracite fix",
    "lint": "ultracite check",
    "cli:create": "pnpm -F @bklit/create",
    "postinstall": ""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@turbo/gen": "^2.5.8",
    "concurrently": "^9.1.2",
    "jsonc-parser": "^3.3.1",
    "prisma": "catalog:prisma",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "ultracite": "^7.0.10"
  },
  "dependencies": {
    "@prisma/client": "catalog:prisma"
  }
}

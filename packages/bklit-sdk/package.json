{
  "name": "bklit",
  "version": "0.1.0",
  "description": "A lightweight analytics SDK for tracking page views, sessions, and user behavior",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {},
  "license": "MIT",
  "keywords": [
    "analytics",
    "tracking",
    "sdk",
    "page-views",
    "sessions",
    "user-behavior"
  ],
  "author": "Bklit Analytics",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bklit.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bklit/issues"
  },
  "homepage": "https://github.com/your-username/bklit#readme"
}

{
  "name": "@bklit/db",
  "version": "0.1.0",
  "private": true,
  "module": true,
  "exports": {
    "./env": "./env.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "clean": "git clean -xdf generated .cache .turbo dist node_modules",
    "build": "pnpm generate",
    "dev": "pnpm generate",
    "generate": "pnpm with-env prisma generate --no-engine --schema=./prisma/schema.prisma",
    "migrate": "pnpm with-env prisma migrate dev --schema=./prisma/schema.prisma",
    "studio": "pnpm with-env prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "pnpm with-env tsx src/seed.ts",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "catalog:prisma",
    "@prisma/extension-accelerate": "catalog:prisma",
    "@t3-oss/env-nextjs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@bklit/tsconfig": "workspace:*",
    "dotenv-cli": "^10.0.0",
    "prisma": "catalog:prisma",
    "typescript": "catalog:"
  }
}

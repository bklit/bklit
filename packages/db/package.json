{
  "name": "@bklit/db",
  "version": "0.1.0",
  "private": true,
  "module": true,
  "exports": {
    "./env": "./env.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "clean": "git clean -xdf generated .cache .turbo dist node_modules",
    "build": "pnpm generate",
    "dev": "pnpm generate",
    "generate": "pnpm with-env prisma generate --no-engine --schema=./prisma/schema.prisma",
    "migrate": "pnpm with-env-dev prisma migrate dev --schema=./prisma/schema.prisma",
    "studio": "pnpm with-env-dev prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "pnpm with-env tsx src/seed.ts",
    "db:reset": "pnpm with-env-dev prisma migrate reset --skip-seed --schema=./prisma/schema.prisma",
    "db:reset:seed": "pnpm with-env-dev prisma migrate reset --schema=./prisma/schema.prisma",
    "db:push": "pnpm with-env-dev prisma db push --schema=./prisma/schema.prisma",
    "db:pull": "pnpm with-env-dev prisma db pull --schema=./prisma/schema.prisma",
    "db:status": "pnpm with-env-dev prisma migrate status --schema=./prisma/schema.prisma",
    "db:deploy": "pnpm with-env prisma migrate deploy --schema=./prisma/schema.prisma",
    "with-env": "dotenv -e ../../.env --",
    "with-env-dev": "node scripts/with-env-dev.cjs"
  },
  "dependencies": {
    "@prisma/client": "catalog:prisma",
    "@prisma/extension-accelerate": "catalog:prisma",
    "@t3-oss/env-nextjs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@bklit/tsconfig": "workspace:*",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^10.0.0",
    "prisma": "catalog:prisma",
    "typescript": "catalog:"
  }
}

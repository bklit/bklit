{
  "name": "@bklit/sdk",
  "version": "1.0.0",
  "private": false,
  "author": "Matt Litherland",
  "license": "MIT",
  "homepage": "https://bklit.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bklit/bklit.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/bklit/bklit/issues"
  },
  "keywords": [
    "analytics",
    "tracking",
    "page-views",
    "sessions",
    "web-analytics",
    "websocket",
    "real-time",
    "realtime-analytics",
    "bklit"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "BKLIT_ENVIRONMENT=production tsup src/index.ts src/nextjs.tsx --format esm,cjs --dts --clean",
    "dev": "BKLIT_ENVIRONMENT=development BKLIT_DEBUG=true tsup src/index.ts src/nextjs.tsx --format esm,cjs --dts --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "import": "./dist/nextjs.mjs",
      "require": "./dist/nextjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
